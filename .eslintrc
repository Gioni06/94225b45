{
  "plugins": [
    "prettier"
  ],
  "extends": [
    "react",
    "prettier"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "env" : {
    "browser" : true,
    "node" : true,
    "es6" : true
  },
  "rules": {
    "prettier/prettier": ["error", {"trailingComma": true, "singleQuote": true}],
    "no-console": 0,
    "react/sort-comp": [1, {
      "order": [
        "type-annotations",
        "static-methods",
        "lifecycle",
        "everything-else",
        "render"
      ]
    }]
  }
}